<center>

<h1> <b> Registered Users </h1> </b>

<table style="max-width: 30rem;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <% if user.moderator %>
            <td> Moderator </td>
        <% else %>
            <td> User </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>

<h1><b>Write a message</b></h1>


<%= form_with(model: @mensaje, local: true) do |form| %>

    <div class="form-group">
        <%= form.label :Receiver, "Who are your sending this message to?" %> <br>
        <%= form.text_field :receptor %>
    </div>

    <br>

    <div class="form-group">
        <%= form.label :Body, "Here goes your message"%> <br>
        <%= form.text_field :cuerpo %>
    </div>

    <br>

    <button type="submit" class="btn btn-primary">Submit</button>


<% end %>
