<center>
<h2><strong>Edit <%= resource_name.to_s.humanize %></strong></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class:"col-form-label mt-4" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", style:"max-width: 30rem;"  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class:"col-form-label mt-4" %><br />
    <%= f.text_field :name, autofocus: true, class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class:"col-form-label mt-4" %><br />
    <%= f.text_field :last_name, autofocus: true, class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :run, class:"col-form-label mt-4" %><br />
    <%= f.text_field :run, autofocus: true, class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, class:"col-form-label mt-4" %><br />
    <%= f.text_field :phone, autofocus: true, class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :address, class:"col-form-label mt-4" %><br />
    <%= f.text_field :address, autofocus: true, class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :birth_date, class:"col-form-label mt-4" %><br />
    <%= f.date_field :birth_date, autofocus: true, class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :pay_method, class:"col-form-label mt-4" %><br />
    <%= f.select :pay_method, options_for_select([['Debit Card'], ['Credit Card'], ['QR Code']]), include_blank: true, prompt: '', autofocus: true, class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class:"col-form-label mt-4" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", style:"max-width: 30rem;" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class:"col-form-label mt-4" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :moderator, class:"col-form-label mt-4" %><br />
    <%= f.select :moderator, options_for_select([['true'], ['false']]), include_blank: true, class:"form-select", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :admin, class:"col-form-label mt-4" %><br />
    <%= f.select :admin, options_for_select([['true'], ['false']]), include_blank: true, class:"form-select", style:"max-width: 30rem;" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, class:"col-form-label mt-4" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", style:"max-width: 30rem;" %>
  </div>

  <br>
  <button type="submit" class="btn btn-primary">Update</button>
<% end %>

<br>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>

</center>
<%= link_to "Back", :back , class:"btn btn-outline-primary"%>
